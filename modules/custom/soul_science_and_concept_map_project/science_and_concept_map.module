/**
 * Verify QR code and return HTML snippet.
 */
function verify_qrcode_fromdb($qr_code) {
	$qr_code = trim((string) $qr_code);
	if ($qr_code === '') {
		return "<b>Sorry ! The serial number you entered seems to be invalid. Please try again ! <b>";
	}

	$connection = \Drupal::database();
	$proposal_id = $connection->select('soul_science_and_concept_map_qr_code', 'q')
		->fields('q', ['proposal_id'])
		->condition('qr_code', $qr_code)
		->range(0, 1)
		->execute()
		->fetchField();

	if (!$proposal_id) {
		return "<b>Sorry ! The serial number you entered seems to be invalid. Please try again ! <b>";
	}

	$proposal = $connection->select('soul_science_and_concept_map_proposal', 'p')
		->fields('p')
		->condition('id', $proposal_id)
		->condition('approval_status', 3)
		->range(0, 1)
		->execute()
		->fetchObject();

	if (!$proposal) {
		return "<b>Sorry ! The serial number you entered seems to be invalid. Please try again ! <b>";
	}

	// Build the HTML as in legacy code (lightly escaped).
	$contributor = htmlspecialchars($proposal->contributor_name ?? '', ENT_QUOTES, 'UTF-8');
	$title = htmlspecialchars($proposal->project_title ?? '', ENT_QUOTES, 'UTF-8');
	$guide = htmlspecialchars($proposal->project_guide_name ?? '', ENT_QUOTES, 'UTF-8');

	$page_content = "<h4>Participation Details</h4><table><tr><td>Contributor Name</td><td>{$contributor}</td></tr>";
	$page_content .= "<tr><td>Activity</td><td>Science and Concept Map Project</td></tr>";
	$page_content .= "<tr><td>Project Completed</td><td>{$title}</td></tr>";
	if (!empty($proposal->project_guide_name)) {
		$page_content .= "<tr><td>Project Guide</td><td>{$guide}</td></tr>";
	}
	$page_content .= "</table>";

	return $page_content;
}
