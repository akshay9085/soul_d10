function science_and_concept_map_mail($key, &$message, $params) {
	$langcode = $message['langcode'] ?? \Drupal::languageManager()->getDefaultLanguage()->getId();
	$options = ['langcode' => $langcode];
	$site_name = \Drupal::config('system.site')->get('name');

	$set_headers = function (array $headers = []) use (&$message) {
		if (!empty($headers)) {
			$message['headers'] = $headers + $message['headers'];
		}
	};

	$not_entered = function ($value) {
		return ($value === NULL || $value === '' || $value === 'NULL') ? 'Not Entered' : $value;
	};

	$load_proposal = function ($proposal_id) {
		if (!$proposal_id) {
			return NULL;
		}
		return \Drupal::database()->select('soul_science_and_concept_map_proposal', 'p')
			->fields('p')
			->condition('id', $proposal_id)
			->range(0, 1)
			->execute()
			->fetchObject();
	};

	$load_solution = function ($solution_id) {
		if (!$solution_id) {
			return NULL;
		}
		return \Drupal::database()->select('soul_science_and_concept_map_solution', 's')
			->fields('s')
			->condition('id', $solution_id)
			->range(0, 1)
			->execute()
			->fetchObject();
	};

	switch ($key) {
		case 'science_and_concept_map_proposal_received':
			$proposal_id = $params['science_and_concept_map_proposal_received']['proposal_id']
				?? $params['science_and_concept_map_proposal_received']['result1']
				?? NULL;
			$proposal = $load_proposal($proposal_id) ?: (object) [];
